<section class="admin_dashboard">

  <h1>Admin Dashboard</h1>

  <ul class="list-group">
    <li class="list-group-item list-group-item-action list-group-item-success d-flex flex-row justify-content-between align-items-center">
      Total number of products: 
      <span class="badge badge-primary badge-pill"><%= @products_count %></span>

    </li>
    <li class="list-group-item list-group-item-action list-group-item-info d-flex justify-content-between align-items-center">
      Total number of categories: 
      <span class="badge badge-primary badge-pill"><%= @categories_count %></span>
    </li>
  </ul>

  <%= link_to "Products", admin_products_path, class: 'btn btn-lg btn-primary' %>

</section>