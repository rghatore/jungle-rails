<table class="table table-bordered">
<thead>
  <tr>
    <th colspan="2">Item</th>
    <th>Quantity</th>
    <th>Price</th>
  </tr>
</thead>
<tbody>
  <%= @line_items.each do |item| %>
    <%= render 'item', item: item, product: @products.find {|obj| obj.id == item.product_id} %>
  <% end %>
</tbody>
  <tfoot>
  <tr>
    <th colspan="3">
      TOTAL:
    </th>
    <th>
      <%= humanized_money_with_symbol @order.total_cents / 100.0 %>
    </th>
  </tr>
  </tfoot>
</table>


