<table class="table table-bordered">
<thead>
  <tr>
    <th colspan="2">Item</th>
    <th>Quantity</th>
    <th>Price</th>
  </tr>
</thead>
<tbody>
  <%= @line_items.each do |item| %>
    <%= product = @products.find {|obj| obj.id == item.product_id} %>
    <tr>
    <td>
      <%= image_tag product.image.tiny %>
    </td>
    <td>
      <h4><%= product.name %></h4>
      <br>
      <p><%= product.description %></p>
    </td>
    <td>
      <%= item.quantity %>
    </td>
    <td>
      <%= humanized_money_with_symbol item.total_price_cents / 100.0 %>
    </td>
  </tr>
  <% end %>
</tbody>
  <tfoot>
  <tr>
    <th colspan="3">
      TOTAL:
    </th>
    <th>
      <%= humanized_money_with_symbol @order.total_cents / 100.0 %>
    </th>
  </tr>
  </tfoot>
</table>


